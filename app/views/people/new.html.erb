<%= form_with scope: :person, url: people_path, local: true do |form| %>
  <p>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
  </p>

  <p>
    <%= form.label "ppd" %> <br />
    <%= form.check_box :ppd %> <br />
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
<%= link_to 'Voltar', people_path %>
