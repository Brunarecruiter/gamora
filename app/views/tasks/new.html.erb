<%= form_with scope: :task, url: tasks_path, local: true do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>

  <p>
    <%= form.label :max_hours %><br>
    <%= form.number_field :max_hours %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
