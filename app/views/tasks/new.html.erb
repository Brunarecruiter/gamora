<h2 class="titulo">Nova Tarefa</h2>
<div class="formulario">
<%= form_with scope: :task, url: tasks_path, local: true do |form| %>
  <p>
    <%= form.label :name, "Nome" %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :description, "Descrição" %><br>
    <%= form.text_area :description %>
  </p>

  <p>
    <%= form.label :max_hours, "Máximo de Horas" %><br>
    <%= form.number_field :max_hours %>
  </p>
  <p>
    <%= form.submit "Salvar Tarefa" %>
  </p>
<% end %>
</div>
<%= link_to 'Voltar', tasks_path %>
